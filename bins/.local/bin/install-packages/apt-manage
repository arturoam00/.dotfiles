#!/bin/sh

set -e

PACKAGES_FILE="$HOME/.config/install-packages/packages.txt"

mkdir -p "$(dirname "$PACKAGES_FILE")"
touch "$PACKAGES_FILE"

add() {
	package="$1"
	grep -qxF "$package" "$PACKAGES_FILE" || echo "$package" >> "$PACKAGES_FILE"
}

delete() {
	package="$1"
	sed -i "/^${package}$/d" "$PACKAGES_FILE"
}

if [ $1 = "install" ]; then
	shift
	sudo apt install -y "$@"
	for package in "$@"; do 
		add "$package"
	done

elif [ $1 = "remove" ]; then
	shift
	sudo apt remove -y "$@"
	for package in "$@"; do 
		delete "$package"
	done

else 
	apt "$@"
fi

