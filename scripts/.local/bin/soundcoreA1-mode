#!/bin/bash

CARD="bluez_card.E8_EE_CC_7B_88_43"

case "$1" in
  music)
    if pactl set-card-profile "$CARD" a2dp-sink-sbc_xq; then
      notify-send "üé∂ Switched SoundcoreA1 to music mode"
    else
      notify-send "‚ùå Failed. Is SoundcoreA1 connected?"
    fi
    ;;
  call)
    if pactl set-card-profile "$CARD" headset-head-unit-msbc; then
      notify-send "üé§ Switched SoundcoreA1 to call mode"
    else
      notify-send "‚ùå Failed. Is SoundcoreA1 connected?"
    fi
    ;;
  *)
    echo "Usage: $0 {music|call}"
    exit 1
    ;;
esac

