#!/bin/env python3

import sys
import os

def main(url):
    to, _, params = url.partition("?")
    to = to.replace("mailto:", "")
    params = params.replace("subject=","su=")
    os.system(f"xdg-open 'https://mail.google.com/mail/?view=cm&fs=1&to={to}&{params}'")

if __name__ == "__main__":
    main(sys.argv[1])
